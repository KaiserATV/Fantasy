package karte;

import javafx.application.Application;
import javafx.scene.Group;
import javafx.scene.Scene;
import javafx.scene.image.Image;
import javafx.scene.image.ImageView;
import javafx.scene.layout.GridPane;
import javafx.stage.Stage;

public class GameGUI extends Application {
    private static final int TILE_SIZE = 10;
    private static final int MAP_SIZE = 100;

    // Beispielbilder für Bäume, Wege und Gebäude
    private Image treeImage;
    private Image pathImage;
    private Image buildingImage;

    private Tile[][] map;

    public static void main(String[] args) {
        launch(args);
    }

    @Override
    public void start(Stage primaryStage) {
        // Laden der Bilder für Bäume, Wege und Gebäude
        treeImage = new Image("tree.png");
        pathImage = new Image("path.png");
        buildingImage = new Image("building.png");

        // Erstellen der Karten-Datenstruktur (Array von Tiles)
        map = new Tile[MAP_SIZE][MAP_SIZE];
        initializeMap();

        // Erstellen der GUI-Komponenten
        GridPane gridPane = createGridPane();

        // Konfigurieren des Hauptfensters
        Group root = new Group(gridPane);
        Scene scene = new Scene(root, MAP_SIZE * TILE_SIZE, MAP_SIZE * TILE_SIZE);
        primaryStage.setTitle("Game GUI");
        primaryStage.setScene(scene);
        primaryStage.show();
    }

    private void initializeMap() {
        // Hier könntest du Logik hinzufügen, um die Kartenfelder zu generieren.
        // Du kannst die map[][]-Variable verwenden, um die Informationen zu speichern,
        // welche Art von Bild an welcher Position angezeigt werden soll.
    }

    private GridPane createGridPane() {
        GridPane gridPane = new GridPane();
        gridPane.setHgap(0);
        gridPane.setVgap(0);

        // Iteriere über die Kartenfelder und füge ImageView-Komponenten zur GridPane hinzu
        for (int y = 0; y < MAP_SIZE; y++) {
            for (int x = 0; x < MAP_SIZE; x++) {
                ImageView imageView = new ImageView();
                imageView.setFitWidth(TILE_SIZE);
                imageView.setFitHeight(TILE_SIZE);

                // Hier kannst du die richtigen Bilder für jedes Kartenfeld setzen
                if (map[x][y].isTree()) {
                    imageView.setImage(treeImage);
                } else if (map[x][y].isPath()) {
                    imageView.setImage(pathImage);
                } else if (map[x][y].isBuilding()) {
                    imageView.setImage(buildingImage);
                }

                gridPane.add(imageView, x, y);
            }
        }

        return gridPane;
    }
}
